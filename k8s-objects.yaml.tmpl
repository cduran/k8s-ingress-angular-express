apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${DEPLOYMENT_NAME}
  namespace: ${NAMESPACE_NAME}
spec:
  selector:
    matchLabels:
      app: ${DEPLOYMENT_NAME}
  template:
    metadata:
      labels:
        app: ${DEPLOYMENT_NAME}
    spec:
      containers:
        - name: ${DEPLOYMENT_NAME}
          image: ${CONTAINER_IMAGE}
          ports:
            - containerPort: ${CONTAINER_PORT}
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ${INGRESS_NAME}
  namespace: kube-system
spec:
  ingressClassName: nginx
  rules:
    - host: ${INGRESS_DNS_HOSTNAME}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: ${DEPLOYMENT_NAME}
                port:
                  number: 80
---
apiVersion: v1
kind: Service
metadata:
  name: ${DEPLOYMENT_NAME}
  namespace: kube-system
spec:
  type: ExternalName
  externalName: ${DEPLOYMENT_NAME}.${NAMESPACE_NAME}.svc.cluster.local
---
apiVersion: v1
kind: Service
metadata:
  name: ${DEPLOYMENT_NAME}
  namespace: ${NAMESPACE_NAME}
spec:
  ports:
    - name: http
      port: 80
      targetPort: ${CONTAINER_PORT}
      protocol: TCP
  type: NodePort
  selector:
    app: ${DEPLOYMENT_NAME}
